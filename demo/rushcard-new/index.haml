!!! 5
%html
	%head
		%meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
		%meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=Edge'}/
		%meta{'http-equiv' => 'X-UA-compatible', :content => 'chrome=1'}/
		%title Rushcard	
		%link{:href => 'css/html5reset-1.6.1.css', :rel => 'stylesheet', :type => 'text/css'}/
		%link{:href => 'css/font-awesome.css', :rel => 'stylesheet', :type => 'text/css'}/
		%link{:href => 'css/home.css', :rel => 'stylesheet', :type => 'text/css'}/
		%script{:src => 'js/modernizr-2.5.3.js', :type => 'text/javascript'}
		%script{:src => 'js/jquery-1.9.0.min.js', :type => 'text/javascript'}
		%script{:src => 'js/jquery.scrollTo.min.js', :type => 'text/javascript'}
		%script{:src => 'js/jquery.localScroll.min.js', :type => 'text/javascript'}
		%script{:src => 'js/bootstrap.min.js', :type => 'text/javascript'}
		%script{:src => 'js/rush-functions.min.js', :type => 'text/javascript'}

	%body

		/ main viewport for the page
		.viewport

			/ logo and login
			%nav.nav-logo
				.container
					%a.logo
					%a.button.login
						%span login

			/ top nav
			%nav.nav-top
				.container
					%ul
						%li.divider
						%li
							%a Tax<br/>Refund
						%li.divider
						%li
							%a Why<br/>Rushcard
						%li.divider
						%li
							%a How It<br/>Works
						%li.divider
						%li
							%a Features &amp;<br/>Benefits
						%li.divider
						%li
							%a Direct<br/>Deposit
						%li.divider
					.clear

			/ nav for sections
			%nav.nav-sections#navbar
				.container
					%ul.nav
						%li
							%a.savemoney{:href => '#savemoney'} Save Money
						%li
							%a.convenience{:href => '#convenience'} Convenience
						%li
							%a.secure{:href => '#secure'} Safe &amp; Secure
						%li
							%a.respect{:href => '#respect'} Respect
						%li
							%a.testimonials{:href => '#testimonials'} Testimonials
					.clear

			/ top content
			.content-top
				.container
					.fpo-content-top



			/ main content container 
			.content-main

				.content-block#savemoney
					.fpo-content-a

				.content-block#convenience
					.fpo-content-b

				.content-block#secure
					.fpo-content-a

				.content-block#respect
					.fpo-content-b

				.content-block#testimonials
					.fpo-content-a


			/ footer
			%nav.footer-main.fixed
				.container
					%ul
						%li
							%a Home
						%li
							%a How To Add Money
						%li
							%a Where's My Card?
						%li
							%a About Us
						%li
							%a Español
						%li
							%a Customer Care

			%nav.footer-sub
				.container
					%ul
						%li
							%a Terms of Use
						%li
							%a Cardholder Agreement
						%li
							%a Contact Us
						%li
							%a RushCard &amp; Bancorp Privacy Policies
					%ul
						%li
							%a Sitemap
						%li
							%a Partners
						%li
							%a 866-RUSHCARD
						%li
					%ul.legal
						%li
							The Prepaid Visa® RushCard is issued by The Bancorp Bank, Member FDIC, pursuant to a license from Visa U.S.A. Inc. and may be used everywhere Visa debit cards are accepted.
						%li
