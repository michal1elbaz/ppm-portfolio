							input#professional(name='business_type', type='radio')
							label(for='professional') Professional service
							a#business_type9.help.icon.lz-icon-help.small.gray
						.form-fields
							input#real_estate(name='business_type', type='radio')
							label(for='real_estate') Real estate
							a#business_type10.help.icon.lz-icon-help.small.gray
						.form-fields
							input#rental_leasing(name='business_type', type='radio')
							label(for='rental_leasing') Rental & leasing
							a#business_type11.help.icon.lz-icon-help.small.gray
						.form-fields
							input#retail(name='business_type', type='radio')
							label(for='retail') Retail
							a#business_type12.help.icon.lz-icon-help.small.gray
						.form-fields
							input#social_assistance(name='business_type', type='radio')
							label(for='social_assistance') Social Assistance
							a#business_type13.help.icon.lz-icon-help.small.gray
						.form-fields
							input#transportation(name='business_type', type='radio')
							label(for='transportation') Transportation
							a#business_type14.help.icon.lz-icon-help.small.gray
						.form-fields
							input#warehousing(name='business_type', type='radio')
							label(for='warehousing') Warehousing
							a#business_type15.help.icon.lz-icon-help.small.gray
						.form-fields
							input#wholesale(name='business_type', type='radio')
							label(for='wholesale') Wholesale
							a#business_type16.help.icon.lz-icon-help.small.gray
					.clear
					.form-fields
						input#other(checked='checked', name='business_type', type='radio')
						label(for='other') Other
						a#business_type17.help.icon.lz-icon-help.small.gray
					p.tight Please describe what your business will be doing
					.form-fields
						textarea(placeholder='Describe your business activity here', type='text')
				
				hr.top-space
				
				// page navigation 
				ul.page-nav
					li
						a.link-back(href='index.html')
							i.icon.lz-icon-blue.arrow-back
							span Back
					li
						// orange button with icon on right 
						a.button.orange.flex.has-right(href='qaire-03.html')
							span.button-right
								span.inner
									i.icon.button-icon.arrow-large
							span.button-center Save & continue
				.clear
				br
				br
			
			// sidebar 
			.content-sidebar.email
				.email-sidebar
					h3 Your email address (optional)
					p.tight We'll email you a link to your saved answers
					.form-group
						.form-fields
							input(placeholder='you@example.com', type='text')
							a.button.flex.small(href='#')
								span.button-center Submit
						p.sign-in-link
							| Already a member? 
							a(onclick='openModalID(\'signin\');') Sign in here
				.qaire-sidebar
					.customer-service
					blockquote
						.open &#8220;
						p.quote
							| Easy. Efficient. Wonderful experience starting my LLC. Went to the bank today and all my paperwork was ready and professionally presented. Thank you LegalZoom!!!
							span.close  &#8221;
						.from - Christopher W., Phoenixville, PA
			.clear
		
